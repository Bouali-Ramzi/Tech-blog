---
layout: layouts/base.njk
templateClass: tmpl-post container
---

<a class="homepage" href="{{ '/' | url }}">«Homepage</a>

<h1 class="post-title">{{ title }}</h1>

<time datetime="{{ page.date | htmlDateString }}">{{
  page.date | readableDate
}}</time>
{%- for tag in tags | filterTagList -%} {%- set tagUrl %}/tags/{{
  tag | slug
}}/{% endset -%}
<a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>
{%- endfor %}

{{ content | safe }}

<div class="border">
  <h2>You might also like</h2>
  {%- for post in collections.posts | randomLimit(4, page.url) -%} {% include
  'alsoposts.njk' %} {%-endfor-%}
</div>

